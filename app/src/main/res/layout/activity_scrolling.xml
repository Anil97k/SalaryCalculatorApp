<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dk"
    >


    <EditText
        android:id="@+id/et6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:ems="10"
        android:hint="Month(30 or 31)"
        android:inputType="numberDecimal"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColorHint="@android:color/holo_green_dark" />

    <EditText
        android:id="@+id/et3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et2"
        android:layout_alignStart="@+id/et2"
        android:layout_below="@+id/et2"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Rate"
        android:inputType="numberDecimal"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColorHint="@android:color/holo_blue_dark" />


    <EditText
        android:id="@+id/et2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et1"
        android:layout_alignStart="@+id/et1"
        android:layout_below="@+id/et1"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Over Time"
        android:inputType="numberDecimal"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColorHint="@android:color/holo_blue_dark" />

    <EditText
        android:id="@+id/et4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et3"
        android:layout_alignStart="@+id/et3"
        android:layout_centerVertical="true"
        android:duplicateParentState="false"
        android:ems="10"
        android:hint="Advance"
        android:inputType="numberDecimal"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColorHint="@android:color/holo_blue_dark" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et6"
        android:layout_alignStart="@+id/et6"
        android:layout_below="@+id/et6"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Duty"
        android:inputType="numberDecimal"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColorHint="@android:color/holo_blue_dark" />



    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et6"
        android:layout_alignTop="@+id/et6"
        android:layout_toLeftOf="@+id/bt2"
        android:layout_toStartOf="@+id/bt2"
        android:text="Enter the total no. of days in month--"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et1"
        android:layout_alignBottom="@+id/et1"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:text="Enter working days--"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et2"
        android:layout_alignBottom="@+id/et2"
        android:layout_alignEnd="@+id/textView9"
        android:layout_alignRight="@+id/textView9"
        android:text="Enter OverTime--"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Enter Rate--"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textStyle="bold|italic"
        android:layout_alignBaseline="@+id/et3"
        android:layout_alignBottom="@+id/et3"
        android:layout_toLeftOf="@+id/bt2"
        android:layout_toStartOf="@+id/bt2"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp" />



    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView9"
        android:layout_alignRight="@+id/textView9"
        android:layout_centerVertical="true"
        android:text="Enter Advance--"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textStyle="bold|italic" />
    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:textColor="@color/colorAccent"
        android:textColorHint="?android:attr/textColorLink"
        android:layout_alignBaseline="@+id/bt2"
        android:layout_alignBottom="@+id/bt2"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />
    <Button
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:layout_marginTop="22dp"
        android:layout_marginRight="126dp"
        android:layout_marginEnd="126dp"
        android:layout_below="@+id/textView10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/bt1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"

            android:textColor="#0000ff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0000ff"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bt1"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:layout_alignRight="@+id/et4"
        android:layout_alignEnd="@+id/et4">

        <TextView

            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#ff00ff"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_above="@+id/textView4"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6">

    </LinearLayout>

</RelativeLayout>
